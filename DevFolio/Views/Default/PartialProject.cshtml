@model List<DevFolio.Models.TblProject>
<section id="work" class="portfolio-mf sect-pt4 route">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="title-box text-center">
                    <h3 class="title-a">
                        Projelerim
                    </h3>
                    <div class="line-mf"></div>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
<div class="col-md-6">
    <div class="work-box">
        <a href="@item.ProjectImageURL" data-lightbox="gallery-mf">
            <div class="work-img">
                <img src="@item.ProjectImageURL" alt="" class="img-fluid">
            </div>
            <div class="work-content">
                <div class="row">
                    <div class="col-sm-8">
                        <h2 class="w-title">@item.ProjectTitle</h2>
                        <div class="w-more">
                            <span class="w-ctegory">@item.TblCategory.CategoryName</span> / <span class="w-date">@(((DateTime)item.ProjectDate).ToString("dd MMMMMMMMMMM yyyy"))</span>
                        </div>
                    </div>
                    
                </div>
            </div>
        </a>
    </div>
</div>            }
        </div>
    </div>
</section>
