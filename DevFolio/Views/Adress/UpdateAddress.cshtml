@model DevFolio.Models.TblAdress
@{
    ViewBag.Title = "UpdateAddress";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Adres Güncelle</h2>

<br />
<div class="container">

    @using (Html.BeginForm("UpdateAddress", "Adress", FormMethod.Post))
    {
<form class="form-group" method="post">
    <label>Açıklama</label>
    @Html.HiddenFor(x => x.AdressID)
    @Html.TextAreaFor(x => x.AdressDescription, new { @class = "form-control", rows = 2 })
    <br />
    <label>Adres</label>
    @Html.TextBoxFor(x => x.AdressLocation, new { @class = "form-control" })
    <br />
    <label>E-Mail</label>
    @Html.TextBoxFor(x => x.AdressEmail, new { @class = "form-control" })
    <br />

    <label>Telefon</label>
    @Html.TextBoxFor(x => x.AdressPhoneNumber, new { @class = "form-control" })
    <br />

    <button class="btn btn-primary">Güncelle</button>
</form>}
</div>



